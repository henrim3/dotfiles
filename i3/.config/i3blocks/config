[sleep]
full_text=  󰒲  
command=dm-tool lock && systemctl suspend &> /dev/null && echo " 󰒲  "
#command=i3lock -c 4d4d4d && systemctl suspend &> /dev/null && echo " 󰒲  "

[lock]
full_text=    
command=dm-tool lock
#command=i3lock -c 4d4d4d

[display]
full_text=  󰍹  
command=autorandr --change &> /dev/null && hsetroot --cover ~/.background-image &> /dev/null

[keyboard]
full_text=    
command=setxkbmap -option caps:swapescape && xset r rate 350 43

[sound]
full_text= 🔇:  0% 
command=~/.config/i3blocks/sound/sound_info.sh
interval=1
color=#DFA06E

[disk]
command=df -h / | awk '/\//{ printf(" 󰋊 %4s/%s \n", $3, $2) }'
interval=2
color=#C9E3DB

[memory]
command=free -h | awk '/Mem:/ { printf(" 󰍛 %5s/%s \n", $3, $2) }'
interval=2
color=#FEC925

[network]
command= nmcli | grep 'wlp98s0: connected' | awk '/wlp98s0:/ { printf("   %s \n", $4) } { printf(" 󰖪  \n") }'
interval=2
color=#C6E0FF

[battery]
command=~/.config/i3blocks/battery/battery_info.sh
interval=2
color=#9CC4B2

[time]
command=date +" %a, %d %b - %I:%M %p "
interval=2
color=#F5F3BB
